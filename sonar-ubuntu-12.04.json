{
  "variables": {
    "iso_url": "http://releases.ubuntu.com/12.04/ubuntu-12.04.5-server-amd64.iso",
    "iso_checksum": "769474248a3897f4865817446f9a4a53",
    "guest_additions_url": "http://download.virtualbox.org/virtualbox/4.3.20/VBoxGuestAdditions_4.3.20.iso",
    "disk_size": "6000",
    "jdk_url": "",
    "sonar_url": ""
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "md5",
      "iso_checksum": "{{user `iso_checksum`}}",
      "guest_additions_url": "{{user `guest_additions_url`}}",
      "guest_additions_sha256": "9ab48f44ac26a6deb374cb5fe6bad103bbf4fdf5186140e2d40ebe48bd01f3ea",
      "guest_additions_path": "/tmp/VBoxGuestAdditions.iso",
      "http_directory": "http",
      "headless": false,
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz <wait>",
        "auto ",
        "console-setup/ask_detect=false ",
        "debconf/frontend=noninteractive ",
        "debian-installer=en_US ",
        "fb=false ",
        "hostname={{.Name}} ",
        "initrd=/install/initrd.gz ",
        "kbd-chooser/method=us ",
        "keyboard-configuration/modelcode=SKIP ",
        "keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA ",
        "locale=en_US ",
        "noapic ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/sonar-ubuntu-12.04-preseed.cfg<wait>",
        " -- <enter>"
      ],
      "disk_size": "{{user `disk_size`}}",
      "ssh_username": "sonar",
      "ssh_password": "sonar",
      "ssh_port": 22,
      "ssh_wait_timeout": "600s",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'sonar' | sudo -S sh 'shutdown.sh'",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ]
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "ubuntu-64",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "md5",
      "iso_checksum": "{{user `iso_checksum`}}",
      "tools_upload_flavor": "linux",
      "tools_upload_path" : "/tmp/{{.Flavor}}.iso",
      "http_directory": "http",
      "headless": false,
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz <wait>",
        "auto ",
        "console-setup/ask_detect=false ",
        "debconf/frontend=noninteractive ",
        "debian-installer=en_US ",
        "fb=false ",
        "hostname={{.Name}} ",
        "initrd=/install/initrd.gz ",
        "kbd-chooser/method=us ",
        "keyboard-configuration/modelcode=SKIP ",
        "keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA ",
        "locale=en_US ",
        "noapic ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/sonar-ubuntu-12.04-preseed.cfg<wait>",
        " -- <enter>"
      ],
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "4",
      "ssh_username": "sonar",
      "ssh_password": "sonar",
      "ssh_port": 22,
      "ssh_wait_timeout": "600s",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'sonar' | sudo -S sh 'shutdown.sh'",
      "vm_name": "sonar",
      "vmdk_name": "disk",
      "vmx_data": {
        "memsize": "2048",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "1"
      },
      "output_directory": "build"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts/support/sonar",
      "destination": "/tmp/sonar"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/puppet.sh",
        "scripts/virtualbox.sh",
        "scripts/vmware.sh",
        "scripts/sonar.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "environment_vars": [
        "JDK_URL={{user `jdk_url`}}",
        "SONAR_URL={{user `sonar_url`}}"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'sonar' | {{.Vars}} sudo -E -S sh '{{.Path}}'"
        },
        "vmware-iso": {
          "execute_command": "echo 'sonar' | {{.Vars}} sudo -E -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "output": "sonar-ubuntu-12.04.tar.gz",
      "keep_input_artifact": true
    }
  ]
}
