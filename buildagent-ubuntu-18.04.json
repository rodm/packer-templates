{
  "variables": {
    "iso_url": "http://cdimage.ubuntu.com/releases/18.04/release/ubuntu-18.04-server-amd64.iso",
    "iso_checksum_url": "http://cdimage.ubuntu.com/releases/18.04/release/SHA256SUMS",
    "disk_size": "16000",
    "network_device": "vmxnet3",
    "network_name": "VM Network",
    "jdk_base_url": ""
  },
  "builders": [
    {
      "type": "vmware-iso",
      "guest_os_type": "ubuntu-64",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "sha256",
      "iso_checksum_url": "{{user `iso_checksum_url`}}",
      "tools_upload_flavor": "linux",
      "tools_upload_path" : "/tmp/{{.Flavor}}.iso",
      "http_directory": "http",
      "headless": false,
      "boot_wait": "10s",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic ",
        "initrd=/install/initrd.gz ",
        "debian-installer=en_US ",
        "auto ",
        "locale=en_US ",
        "kbd-chooser/method=us ",
        "hostname={{.Name}} ",
        "grub-installer/bootdev=/dev/sda<wait> ",
        "fb=false ",
        "debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP ",
        "keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA ",
        "console-setup/ask_detect=false ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/buildagent-ubuntu-18.04-preseed.cfg ",
        "-- <enter>"
      ],
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "4",
      "ssh_username": "builder",
      "ssh_password": "builder",
      "ssh_port": 22,
      "ssh_wait_timeout": "600s",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'builder'|sudo -S sh 'shutdown.sh'",
      "vm_name": "buildagent",
      "vmdk_name": "disk",
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1"
      },
      "vmx_data_post": {
        "ethernet0.virtualDev": "{{user `network_device`}}",
        "ethernet0.networkName": "{{user `network_name`}}",
        "ethernet0.uptCompatibility": "TRUE"
      },
      "output_directory": "build"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/vmware.sh",
        "scripts/network.sh",
        "scripts/teamcity-agent.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "environment_vars": [
        "JDK_BASE_URL={{user `jdk_base_url`}}"
      ],
      "override": {
        "vmware-iso": {
          "execute_command": "echo 'builder' | {{.Vars}} sudo -E -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "output": "buildagent-ubuntu-18.04.tar.gz",
      "keep_input_artifact": true
    }
  ]
}
