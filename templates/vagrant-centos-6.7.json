{
  "variables": {
    "iso_url": "CentOS-6.7-x86_64-minimal.iso",
    "iso_checksum": "eb3c8be6ab668e6d83a118323a789e6c",
    "guest_additions_url": "http://download.virtualbox.org/virtualbox/4.3.20/VBoxGuestAdditions_4.3.20.iso"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `iso_url`}}",
      "guest_additions_url": "{{user `guest_additions_url`}}",
      "guest_additions_sha256": "9ab48f44ac26a6deb374cb5fe6bad103bbf4fdf5186140e2d40ebe48bd01f3ea",
      "guest_additions_path": "/tmp/VBoxGuestAdditions.iso",
      "http_directory": "http",
      "headless": false,
      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/vagrant-centos-6.7-ks.cfg<enter><wait>"
      ],
      "disk_size": 20480,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "2400s",
      "ssh_pty": true,
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ]
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "centos-64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `iso_url`}}",
      "tools_upload_flavor": "linux",
      "tools_upload_path" : "/tmp/{{.Flavor}}.iso",
      "http_directory": "http",
      "headless": false,
      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/vagrant-centos-6.7-ks.cfg<enter><wait>"
      ],
      "disk_size": 20480,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "2400s",
      "ssh_pty": true,
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "1"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/linux/base.sh",
        "scripts/linux/puppet.sh",
        "scripts/linux/vagrant.sh",
        "scripts/linux/virtualbox.sh",
        "scripts/linux/vmware.sh",
        "scripts/linux/cleanup.sh",
        "scripts/linux/zerodisk.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S sh '{{.Path}}'"
        },
        "vmware-iso": {
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "centos-6.7-x64-{{.Provider}}.box"
    }
  ]
}
