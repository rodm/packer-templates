{
  "variables": {
    "iso_url": "http://releases.ubuntu.com/10.04/ubuntu-10.04.4-server-amd64.iso",
    "iso_checksum": "9b218654cdcdf9722171648c52f8a088",
    "guest_additions_url": "http://download.virtualbox.org/virtualbox/4.3.20/VBoxGuestAdditions_4.3.20.iso",
    "disk_size": "6000"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "md5",
      "iso_checksum": "{{user `iso_checksum`}}",
      "guest_additions_url": "{{user `guest_additions_url`}}",
      "guest_additions_sha256": "9ab48f44ac26a6deb374cb5fe6bad103bbf4fdf5186140e2d40ebe48bd01f3ea",
      "guest_additions_path": "/tmp/VBoxGuestAdditions.iso",
      "http_directory": "http",
      "headless": false,
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=agent<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/buildagent-ubuntu-10.04-preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "disk_size": "{{user `disk_size`}}",
      "ssh_username": "builder",
      "ssh_password": "builder",
      "ssh_port": 22,
      "ssh_wait_timeout": "600s",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'builder'|sudo -S sh 'shutdown.sh'",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ]
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "ubuntu-64",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "md5",
      "iso_checksum": "{{user `iso_checksum`}}",
      "tools_upload_flavor": "linux",
      "tools_upload_path" : "/tmp/{{.Flavor}}.iso",
      "http_directory": "http",
      "headless": false,
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=agent<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/buildagent-ubuntu-10.04-preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "4",
      "ssh_username": "builder",
      "ssh_password": "builder",
      "ssh_port": 22,
      "ssh_wait_timeout": "600s",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'builder'|sudo -S sh 'shutdown.sh'",
      "vm_name": "buildagent",
      "vmdk_name": "disk",
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "2"
      },
      "output_directory": "build"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/puppet.sh",
        "scripts/virtualbox.sh",
        "scripts/vmware.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'builder' | {{.Vars}} sudo -E -S sh '{{.Path}}'"
        },
        "vmware-iso": {
          "execute_command": "echo 'builder' | {{.Vars}} sudo -E -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "output": "buildagent-ubuntu-10.04.tar.gz",
      "keep_input_artifact": true
    }
  ]
}
