{
  "variables": {
    "iso_url": "http://cdimage.ubuntu.com/ubuntu-legacy-server/releases/20.04/release/ubuntu-20.04-legacy-server-amd64.iso",
    "iso_checksum": "sha256:36f15879bd9dfd061cd588620a164a82972663fdd148cce1f70d57d314c21b73",
    "guest_additions_url": "http://download.virtualbox.org/virtualbox/6.1.10/VBoxGuestAdditions_6.1.10.iso",
    "guest_additions_sha256": "62a0c6715bee164817a6f58858dec1d60f01fd0ae00a377a75bbf885ddbd0a61",
    "username": "vagrant",
    "password": "vagrant"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "guest_additions_url": "{{user `guest_additions_url`}}",
      "guest_additions_sha256": "{{user `guest_additions_sha256`}}",
      "guest_additions_path": "/tmp/VBoxGuestAdditions.iso",
      "http_directory": "http",
      "headless": true,
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz <wait>",
        "auto <wait>",
        "console-setup/ask_detect=false ",
        "debconf/frontend=noninteractive ",
        "debian-installer=en_US ",
        "fb=false ",
        "hostname={{.Name}} ",
        "initrd=/install/initrd.gz ",
        "kbd-chooser/method=us ",
        "keyboard-configuration/modelcode=SKIP ",
        "keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA ",
        "locale=en_US ",
        "passwd/username={{user `username`}} ",
        "passwd/user-fullname={{user `username`}} ",
        "passwd/user-password={{user `password`}} ",
        "passwd/user-password-again={{user `password`}} ",
        "noapic ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-20.04-preseed.cfg ",
        " -- <enter>"
      ],
      "disk_size": 32768,
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_port": 22,
      "ssh_pty": true,
      "ssh_timeout": "15m",
      "shutdown_command": "echo '{{user `password`}}' | sudo -S /sbin/halt -h -p",
      "vm_name": "focal",
      "virtualbox_version_file": ".vbox_version",
      "cpus": 2,
      "memory": 1024
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "ubuntu-64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "tools_upload_flavor": "linux",
      "tools_upload_path" : "/tmp/{{.Flavor}}.iso",
      "http_directory": "http",
      "headless": true,
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz <wait>",
        "auto <wait>",
        "console-setup/ask_detect=false ",
        "debconf/frontend=noninteractive ",
        "debian-installer=en_US ",
        "fb=false ",
        "hostname={{.Name}} ",
        "initrd=/install/initrd.gz ",
        "kbd-chooser/method=us ",
        "keyboard-configuration/modelcode=SKIP ",
        "keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA ",
        "locale=en_US ",
        "passwd/username={{user `username`}} ",
        "passwd/user-fullname={{user `username`}} ",
        "passwd/user-password={{user `password`}} ",
        "passwd/user-password-again={{user `password`}} ",
        "noapic ",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-20.04-preseed.cfg ",
        " -- <enter>"
      ],
      "disk_size": 32768,
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_port": 22,
      "ssh_pty": true,
      "ssh_timeout": "15m",
      "shutdown_command": "echo '{{user `password`}}' | sudo -S /sbin/halt -h -p",
      "vm_name": "focal",
      "vmdk_name": "disk",
      "cpus": 1,
      "memory": 512,
      "cores": 1,
      "vmx_data": {
        "ethernet0.pciSlotNumber": "32"
      },
      "vmx_remove_ethernet_interfaces": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/linux/vmware.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S sh '{{.Path}}'"
        },
        "vmware-iso": {
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "ubuntu-20.04-x64-{{.Provider}}.box"
    }
  ]
}
