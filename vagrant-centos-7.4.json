{
  "variables": {
    "iso_url": "CentOS-7-x86_64-Minimal-1708.iso",
    "iso_checksum": "bba314624956961a2ea31dd460cd860a77911c1e0a56e4820a12b9c5dad363f5",
    "guest_additions_url": "http://download.virtualbox.org/virtualbox/5.2.2/VBoxGuestAdditions_5.2.2.iso"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `iso_url`}}",
      "guest_additions_url": "{{user `guest_additions_url`}}",
      "guest_additions_sha256": "8317a0479a94877829b20a19df8a7c09187b31eecb3f1ed9d2b8cb8681a81bb8",
      "guest_additions_path": "/tmp/VBoxGuestAdditions.iso",
      "http_directory": "http",
      "headless": false,
      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/vagrant-centos-7.4-ks.cfg<enter><wait>"
      ],
      "disk_size": 20480,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "2400s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "vm_name": "centos7_4",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ]
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "centos-64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `iso_url`}}",
      "tools_upload_flavor": "linux",
      "tools_upload_path" : "/tmp/{{.Flavor}}.iso",
      "http_directory": "http",
      "headless": false,
      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/vagrant-centos-7.4-ks.cfg<enter><wait>"
      ],
      "disk_size": 20480,
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "2400s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
      "vm_name": "centos7_4",
      "vmdk_name": "disk",
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "1"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/puppet.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/linux/vmware.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S sh '{{.Path}}'"
        },
        "vmware-iso": {
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "centos-7.4-x64-{{.Provider}}.box"
    }
  ]
}
