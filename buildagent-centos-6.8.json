{
  "variables": {
    "iso_url": "CentOS-6.8-x86_64-minimal.iso",
    "iso_checksum": "0ca12fe5f28c2ceed4f4084b41ff8a0b",
    "disk_size": "16000",
    "network_device": "vmxnet3",
    "network_name": "VM Network",
    "jdk_base_url": ""
  },
  "builders": [
    {
      "type": "vmware-iso",
      "guest_os_type": "centos-64",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "md5",
      "iso_checksum": "{{user `iso_checksum`}}",
      "tools_upload_flavor": "linux",
      "tools_upload_path" : "/tmp/{{.Flavor}}.iso",
      "http_directory": "http",
      "headless": false,
      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/buildagent-centos-6.8-ks.cfg<enter><wait>"
      ],
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "4",
      "ssh_username": "builder",
      "ssh_password": "builder",
      "ssh_port": 22,
      "ssh_wait_timeout": "2400s",
      "ssh_pty": true,
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'builder'|sudo -S sh '/tmp/shutdown.sh'",
      "vm_name": "buildagent",
      "vmdk_name": "disk",
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "2"
      },
      "vmx_data_post": {
        "ethernet0.virtualDev": "{{user `network_device`}}",
        "ethernet0.networkName": "{{user `network_name`}}",
        "ethernet0.uptCompatibility": "TRUE"
      },
      "output_directory": "build"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/vmware.sh",
        "scripts/teamcity-agent.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "environment_vars": [
        "JDK_BASE_URL={{user `jdk_base_url`}}"
      ],
      "override": {
        "vmware-iso": {
          "execute_command": "echo 'builder' | {{.Vars}} sudo -E -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "output": "buildagent-centos-6.8.tar.gz",
      "keep_input_artifact": true
    }
  ]
}
